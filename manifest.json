{
    "manifest_version": 3,
    "name": "Sign Language YouTube Assistant",
    "version": "1.0",
    "description": "Overlay pre-recorded sign language videos based on YouTube captions.",
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["videos/*.mp4"],
        "matches": ["<all_urls>"]
      }
    ],
    "permissions": ["storage"],
    "host_permissions": ["*://www.youtube.com/*"]
  }
  